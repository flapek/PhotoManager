<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:PhotoManager.LayoutStyle">

    <Style x:Key="MenuOptionText" TargetType="TextBlock">
        <Setter Property="Margin" Value="10"/>
        <Setter Property="TextWrapping" Value="WrapWithOverflow"/>
    </Style>

    <Style x:Key="BaseStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Champagne &amp; Limousines"/>
        <Setter Property="Margin" Value="5"/>
    </Style>
    
    <Style x:Key="OptionNameStyle" TargetType="TextBlock" BasedOn="{StaticResource BaseStyle}">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontStyle" Value="Italic"/>
    </Style>

    <Style x:Key="OptionDescription" TargetType="TextBlock" BasedOn="{StaticResource BaseStyle}">
        <Setter Property="Padding" Value="5"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

</ResourceDictionary>